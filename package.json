{
  "name": "lee-homepage",
  "version": "1.0.0",
  "description": "LEE个人站主页",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "gulp watch",
    "serve": "gulp serve",
    "clean": "gulp clean",
    "dev": "(gulp serve &) && gulp watch",
    "start": "(gulp serve &) && gulp watch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/leeguooooo/MyPage.git"
  },
  "author": "leeguooooo",
  "license": "ISC",
  "devDependencies": {
    "ghooks": "^2.0.0",
    "gulp": "^3.9.1",
    "gulp-clean": "^0.3.2",
    "gulp-nunjucks": "^3.0.0",
    "gulp-rename": "^1.2.2",
    "gulp-sass": "^3.1.0",
    "gulp-webserver": "^0.9.1",
    "validate-commit-msg": "^2.14.0"
  },
  "config": {
    "ghooks": {
      "commit-msg": "validate-commit-msg"
    },
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "test",
        "chore",
        "refactor",
        "opti"
      ],
      "warnOnFail": false,
      "maxSubjectLength": 100,
      "subjectPattern": ".+",
      "subjectPatternErrorMsg": "请输入message信息!",
      "helpMessage": "Commit message 格式错误, \n请查看规范: http://wiki.corp.qunar.com/pages/viewpage.action?pageId=159698767"
    }
  }
}
